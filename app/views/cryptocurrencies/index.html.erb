<p id="notice"><%= notice %></p>

<h1>Криптаволюта</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Короткое наименование</th>
      <th>Полное наименование</th>
      <th>Курс к BTC</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptocurrencies.each do |cryptocurrency| %>
      <tr>
        <td><%= cryptocurrency.currency %></td>
        <td><%= cryptocurrency.name %></td>
        <td><%= cryptocurrency.course %></td>
        <td><%= link_to 'Показать', cryptocurrency %></td>
        <td><%= link_to 'Редактировать', edit_cryptocurrency_path(cryptocurrency) %></td>
        <td><%= link_to 'Удалить', cryptocurrency, method: :delete, data: { confirm: 'Подтвердить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_cryptocurrency_path %>
